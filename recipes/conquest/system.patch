+DIAG_DUMMY =
+LIBS= $(XC_LIB) -lscalapack-openmpi $(BLAS) $(FFT_LIB)
+COMPFLAGS=$(FFLAGS) -O3 -fopenmp $(XC_COMPFLAGS) -fallow-argument-mismatch
